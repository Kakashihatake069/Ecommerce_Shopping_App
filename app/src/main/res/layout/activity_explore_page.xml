<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExplorePageActivity"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#FEC701">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:src="@drawable/menu">

        </ImageView>

        <ImageView

            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_210sdp"
            android:padding="2.5dp"
            android:src="@drawable/search">

        </ImageView>

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:padding="2.5dp"
            android:src="@drawable/cart"

            >

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.6">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Engage"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/_5sdp">
                            <ImageView
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:background="@drawable/tribe"
                                />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Tribe Membership"
                                    android:textSize="@dimen/_18sdp"
                                    android:textStyle="bold"
                                    android:gravity=""
                                    android:layout_margin="@dimen/_10sdp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/_5sdp">
                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:background="@drawable/refer"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Refer and Earn"
                                    android:textSize="@dimen/_18sdp"
                                    android:textStyle="bold"
                                    android:gravity=""
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/_5sdp">
                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:background="@drawable/costom"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Costomise your T-shirt"
                                    android:textSize="@dimen/_18sdp"
                                    android:textStyle="bold"
                                    android:gravity=""
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/_5sdp">
                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:background="@drawable/vote"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Vote For Designs"
                                    android:textSize="@dimen/_18sdp"
                                    android:textStyle="bold"
                                    android:gravity=""
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Popular Curations"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/couple"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Couple T-Shirts"
                                            android:textSize="@dimen/_12sdp"
                                            android:textStyle="bold"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/anime"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Anime Collection"
                                            android:textSize="@dimen/_12sdp"
                                            android:textStyle="bold"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/valentine"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Valentine's Day Special"
                                            android:textSize="@dimen/_12sdp"
                                            android:textStyle="bold"/>
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/bestseller"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Bestsellers"
                                            android:textSize="@dimen/_12sdp"
                                            android:textStyle="bold"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/newa"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="New Arrivals"
                                            android:textSize="@dimen/_12sdp"
                                            android:textStyle="bold"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/play"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Play by Bewakoof"
                                            android:textSize="@dimen/_12sdp"
                                            android:textStyle="bold"/>
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                </LinearLayout>
            </LinearLayout>





        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/imgbhome2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_home_24" />

        <ImageButton
            android:id="@+id/imgbcategories2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_category_24" />

        <ImageButton
            android:id="@+id/imgbexplore2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_explore_24" />

        <ImageButton
            android:id="@+id/imgbprofile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_supervised_user_circle_24" />

    </LinearLayout>

</LinearLayout>